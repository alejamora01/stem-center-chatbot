# Cloudflare Tunnel Configuration
# Copy this to config.yml and update with your values

# Your tunnel ID (get this after running: cloudflared tunnel create stem-center-backend)
tunnel: YOUR_TUNNEL_ID_HERE

# Path to credentials file (created when you run tunnel create)
credentials-file: /path/to/.cloudflared/YOUR_TUNNEL_ID.json

# Ingress rules
ingress:
  # Route API requests to your backend server
  - hostname: api.yourdomain.com
    service: http://localhost:3001
    originRequest:
      connectTimeout: 30s
      noTLSVerify: false

  # Catch-all rule (required)
  - service: http_status:404
